@model TISklep.Models.Film

    <title>@ViewData["Title"] -  Szczegóły</title>


<table>
    <tr>
        <td>
            <h1>@Model.Kategoria.Nazwa</h1>
            @await Component.InvokeAsync("FilmyKategorii", new { nazwaKategorii = Model.Kategoria.Nazwa })
        </td>
        <td>
            <ul>
                <li>Tytuł: @Model.Tytul</li>
                <li>Reżyser: @Model.Rezyser</li>
                <li>Opis: @Model.Opis</li>
                <li>Cena: @Model.Cena zł</li>
                <li>Data dodania: @Model.DataDodania</li>
            </ul>
            <button onclick="location.href='@Url.Action("EdytujFilm","Filmy", new { id = Model.Id })'">Edytuj</button>
        </td>
    </tr>
</table>
