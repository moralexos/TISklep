@model IEnumerable<TISklep.Models.Film>
@{
   
}
<div class="tabele m-5">
    <h1><b>@Model.First().Kategoria.Nazwa</b></h1>
    <h3>@Model.First().Kategoria.Opis</h3>
    <table>
        <thead>
            <tr>
                <th class="th25">Tytuł filmu</th>
                <th class="th25">Reżyser</th>
                <th class="th25">Data Produkcji</th>
                <th class="th25">Cena</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var film in Model)
            {
                <tr>
                    <td>@film.Tytul</td>
                    <td>@film.Rezyser</td>
                    <td>@film.DataProdukcji.Value.Date.ToString("dd MMMM yyyy")</td>
                    <td>@film.Cena zł</td>
                </tr>
            }
        </tbody>
    </table>
</div>
